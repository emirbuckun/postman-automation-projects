	"item": [
		{
			"name": "AddBook",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const jsonData = pm.response.json();",
							"const requestData = JSON.parse(pm.request.body.raw);",
							"",
							"const bookId = jsonData.ID;",
							"pm.environment.set(\"book_id\", bookId);",
							"",
							"pm.collectionVariables.set(\"flag\", false)",
							"",
							"function getRequestBookId () {",
							"    return requestData.isbn + requestData.aisle;",
							"}",
							"",
							"function cleanupScript () {",
							"    const book_id = getRequestBookId()",
							"    pm.environment.set(\"book_id\", book_id)",
							"    pm.collectionVariables.set(\"flag\", true)",
							"    pm.execution.setNextRequest(\"DeleteBook\")",
							"}",
							"",
							"pm.test(\"Status code is 200\", () => {",
							"  pm.expect(pm.response.code).to.eql(200);",
							"});",
							"",
							"// Updated test for success/duplicate message handling",
							"pm.test(\"Response has valid Msg and handles success/duplicate\", () => {",
							"    pm.expect(jsonData).to.have.property(\"Msg\");",
							"    pm.expect(jsonData.Msg).to.be.a(\"string\");",
							"",
							"    if (jsonData.Msg === \"successfully added\") {",
							"        // success path",
							"        pm.expect(true).to.eql(true);",
							"    } else if (jsonData.Msg.indexOf(\"Book Already Exists\") !== -1) {",
							"        // duplicate path -> run cleanup and still pass the test",
							"        cleanupScript();",
							"        pm.expect(true).to.eql(true);",
							"    } else {",
							"        pm.expect.fail(\"Unexpected Msg: \" + jsonData.Msg);",
							"    }",
							"});",
							"",
							"pm.test(\"Content-Type header is present\", () => {",
							"  pm.response.to.have.header(\"Content-Type\");",
							"});",
							"",
							"pm.test(\"Content-Type header is application/json\", () => {",
							"  pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
							"});",
							"",
							"pm.test(\"Response time is less than 1000ms\", () => {",
							"  pm.expect(pm.response.responseTime).to.be.below(1200);",
							"});",
							"",
							"pm.test(\"Response includes 'successfully added'\", () => {",
							"    pm.expect(pm.response.text()).to.include(\"successfully added\");",
							"})",
							"",
							"// isbn + aisle logic check",
							"pm.test(\"ID logic verification\", () => {",
							"    pm.expect(getRequestBookId()).to.equal(bookId);",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"console.log(pm.globals.get(\"companyCode\"));",
							"",
							"const code = pm.globals.get(\"companyCode\");",
							"const val = pm.variables.replaceIn('{{$randomInt}}');",
							"pm.collectionVariables.set(\"isbn\", code + val);",
							"",
							"pm.collectionVariables.set(\"book_name\", pm.iterationData.get(\"BookName\"))",
							"pm.collectionVariables.set(\"author_name\", pm.iterationData.get(\"Author\"))"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"name\": \"{{book_name}}\",\n    \"isbn\": \"{{isbn}}\",\n    \"aisle\": \"227\",\n    \"author\": \"{{author_name}}\"\n}",
					"options": {
